<script>
new Vue({
    el: '#app',
    created () {
        this.getTasks();
        console.log("#tasks.index");
    },    
    data: {
        msg : "aa-1234",
        tasks: [],
    },
    methods: {
        getTasks () {
            axios.get("/api/tasks_index").then(res =>  {
                console.log(res.data.result);
                var items = res.data.result
                var arr =[];
                items.forEach( function (item) {
                    item.url ="/tasks/show/" + item._id,
                    arr.push(item)
                });      
                this.tasks = arr;
                console.log( this.tasks );
            })        
        }
    }

});
</script>