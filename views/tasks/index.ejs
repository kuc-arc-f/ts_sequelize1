<div id="app">
    <h1>Tasks - index</h1>
    <hr />
    <a class="btn btn-primary" href="/tasks/new"> add</a>
    <hr />
    <ul v-for="task in tasks" v-bind:key="task._id">
        <li>{{ task.title }} / id: {{ task.id }}
            <p>{{ task.content }}</p>
            <a v-bind:href="'/tasks/show/' + task.id">[show]</a><br />
            <a v-bind:href="'/tasks/edit/' + task.id">[edit]</a><br />
        </li>
    </ul>    
</div>

